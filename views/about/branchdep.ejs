<style>
  .branch__chart__container {
    /* height: 40vh;  */
    width: 44vw;
    position: relative;
    margin: 70px auto;
  }

  .chart__heading {
    font-weight: bold;
    color: #444;
  }

  .sec-3 {
    height: auto;
    text-align: center;
    padding-top: 70px;
    flex-direction: row;
    background-color: #fcfcfc;
  }

  .mobile {
    display: none;
  }

  @media only screen and (max-width: 1000px) {
    .desktop {
      display: none;
    }

    .mobile {
      display: block;
    }

    .branch__chart__container {
      width: 90vw;
    }

    .sec-3 {
      flex-direction: column !important;
    }
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<div class="branch__chart__container desktop">
  <h4 class="chart__heading">Masters Demographics</h4>
  <br />
  <canvas id="myChart"></canvas>
</div>
<div class="branch__chart__container desktop">
  <h4 class="chart__heading">Bachelors Demographics</h4>
  <br />
  <canvas id="myChart1"></canvas>
</div>
<div class="mobile">
  <div class="container" style="background-color: #fcfcfc;">
    <div class="col-12">
      <div class="img-fluid">
        <img src="/images/masters.png" alt="" class="img-thumbnail" />
      </div>
    </div>
    <br /><br />
    <div class="col-12">
      <div class="img-fluid">
        <img src="/images/bachelors.png" alt="" class="img-thumbnail" />
      </div>
    </div>
  </div>
  <br />
</div>

<script>
  var ctx = document.getElementById("myChart").getContext("2d");
  var ctx1 = document.getElementById("myChart1").getContext("2d");
  /*** Gradient ***/
  var gradient = ctx.createLinearGradient(0, 0, 0, 300);
  gradient.addColorStop(1, "#00D4FF");
  gradient.addColorStop(0.3, "#7D43E5");
  var myChart = new Chart(ctx, {
    type: "bar",
    data: {
      labels: ["M. Plan", "MCA", "M. Sc", "Int. M. Sc", "M.Tech"],
      datasets: [
        {
          label: " ",
          data: [18, 34, 60, 137, 217],
          borderWidth: 1,
          backgroundColor: "#3A90F2",
        },
      ],
    },
    options: {
      scales: {
        yAxes: [
          {
            scaleLabel: {
              display: true,
              labelString: "NUMBER OF STUDENTS",
            },
            gridLines: {
              drawOnChartArea: false,
            },
            ticks: {
              beginAtZero: true,
            },
          },
        ],
        xAxes: [
          {
            scaleLabel: {
              display: true,
              labelString: "BRANCHES ",
              padding: {
                top: 5,
              },
            },
            gridLines: {
              drawOnChartArea: false,
            },
          },
        ],
      },
      responsive: true,
      legend: {
        display: false,
      },
      title: {
        display: false,
      },
    },
  });
  var myChart = new Chart(ctx1, {
    type: "bar",
    data: {
      labels: [
        "Computer Science",
        "Information Technology",
        "Electronics & Instrumentation",
        "Electrical",
        "Mechanical",
        "Civil",
        "Textile",
        "Fashion & Apparel",
        "Biotech",
        "Architecture",
        "Planning",
      ],
      datasets: [
        {
          label: " ",
          data: [70, 66, 113, 148, 140, 134, 60, 20, 27, 17, 43],
          borderWidth: 1,
          backgroundColor: gradient,
        },
      ],
    },
    options: {
      scales: {
        yAxes: [
          {
            scaleLabel: {
              display: true,
              labelString: "NUMBER OF STUDENTS",
            },
            gridLines: {
              drawOnChartArea: false,
            },
            ticks: {
              beginAtZero: true,
            },
          },
        ],
        xAxes: [
          {
            scaleLabel: {
              display: true,
              labelString: "BRANCHES",
              padding: {
                top: 5,
              },
            },
            gridLines: {
              drawOnChartArea: false,
            },
            ticks: {
              callback: function (t) {
                if (t.length == 16) return "CSE";
                if (t.length == 17) return "F&AT";
                if (t.length == 22) return "IT";
                if (t.length == 29) return "I&E";
                else return t;
              },
            },
          },
        ],
      },
      responsive: true,
      legend: {
        display: false,
      },
      title: {
        display: false,
      },
      tooltips: {
        callbacks: {
          title: function (t, d) {
            return d.labels[t[0].index];
          },
        },
      },
    },
  });
</script>
